#include <iostream>

int main() {
    
int price = 5000;
int delivery = 400;
int discount = 50;
int total = price + delivery - discount;

std:: cout << "Ваша скидка составит: " << discount << " рублей. Стоимость товара со скидкой и доставкой: " << total << " рублей.";
}





